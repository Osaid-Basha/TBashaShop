@model Product
@section head {
Product
}

@section title {
Edite
}
<form method="post" action="/admin/products/edit" enctype="multipart/form-data">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="card-body">
        <div class="form-group">
            <label for="exampleInputEmail1">Name</label>
            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter Name Product" name="Name" value="@Model.Name">
        </div>
    </div>
    <div class="card-body">
        <div class="form-group">
            <label for="exampleInputEmail1">Description</label>
            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter Description" name="Description" value="@Model.Description">
        </div>
    </div>
    <div class="card-body">
        <div class="form-group">
            <label for="exampleInputEmail1">Price</label>
            <input type="number" class="form-control" id="exampleInputEmail1" placeholder="Enter Price Product" name="Price" value="@Model.Price">
        </div>
    </div>

    <div class="card-body">
        <div class="form-group">
            <label for="exampleInputEmail1">Quantity</label>
            <input type="number" class="form-control" id="exampleInputEmail1" placeholder="Enter Quantity Product" name="Quantity" value="@Model.Quantity">
        </div>
    </div>
    <div class="card-body">
        <div class="form-group">
            <label for="exampleInputEmail1">Image</label>
            <img src="/images/@Model.Image" width="200px"  />
            <input type="file" class="form-control" id="exampleInputEmail1" placeholder="Enter Image Product" name="Image" >
        </div>
    </div>
    <select name="CategoryId">
        @foreach (var item in ViewBag.Categories)
        {   if(item.Id == Model.CategoryId){
            <option value="@item.Id" selected>@item.Name</option>
            }
            else{

               <option value="@item.Id">@item.Name</option>

            }
            
        }
         
    </select>


    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
</form>