@model List<Category>
@section head {
Categories
}
@section title{
Show
}
<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width: 10px">#</th>
            <th>Title</th>
            <th>Action</th>
          
        </tr>
    </thead>
    <tbody>
        
            @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
				<td>@item.Name</td>
                <td>
					<a type="button" class="btn  bg-gradient-danger" href="/admin/categories/delete/@item.Id">Delete</a>
                    <a type="button" class="btn  bg-gradient-info" href="/admin/categories/edit/@item.Id">Edit</a>
                </td>
                
			</tr>
            }
            
            
        
      
    </tbody>
</table>