<form method="post" action="/admin/categories/edit" enctype="multipart/form-data">
	<input type="hidden" class="form-control" id="exampleFormControlInput1" placeholder="Name ..." name="Id" value="@Model.Id">

	<div class="mb-3">
		<label for="exampleFormControlInput1" class="form-label">Name</label>
		<input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Name ..." name="Name" value="@Model.Name">
		<span class="text-danger" asp-validation-for="Name"></span>
	</div>
	<div class="card-body">
		<div class="form-group">
			<label for="exampleInputEmail1">Image</label>
			<img src="/images/@Model.Image" width="200px" />
			<input type="file" class="form-control" id="exampleInputEmail1" placeholder="Enter Image Product" name="Image">
		</div>
	</div>
	<div class="mb-3">

		<button class="btn btn-outline-primary ">Save</button>
	</div>
</form>